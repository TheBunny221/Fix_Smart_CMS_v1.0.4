{
  "name": "nlc-cms",
  "private": true,
  "version": "1.0.0",
  "description": "NLC-CMS Complaint Management System",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "dev:setup": "node scripts/setup-dev-environment.js setup",
    "dev:reset": "node scripts/setup-dev-environment.js reset",
    "client:dev": "vite --host 0.0.0.0 --port 3000",
    "server:dev": "nodemon server/server.js",
    "start": "node server/server.js",
    "start:prod": "NODE_ENV=production HOST=0.0.0.0 PORT=4005 node server/server.js",
    "start:lan": "HOST=0.0.0.0 PORT=4005 node server/server.js",
    "pm2:start": "npm run db:setup && pm2 start ecosystem.config.js --env production",
    "pm2:start:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:delete": "pm2 delete all",
    "pm2:save": "pm2 save",
    "pm2:resurrect": "pm2 resurrect",
    "build": "node scripts/production-build.js",
    "build:clean": "rimraf dist && npm run build",
    "build:analyze": "npm run build && node scripts/analyze-build.js",
    "deploy:linux": "node scripts/deploy-linux-debian.cjs",
    "deploy:windows": "node scripts/deploy-windows-server.cjs",
    "deploy:setup:linux": "node scripts/startup/install-linux-service.sh",
    "deploy:setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/startup/nlc-cms-service.ps1 -Action install",
    "build:client": "vite build --outDir dist/client",
    "build:server": "tsc -p tsconfig.json --outDir dist/server",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:watch": "tsc -p tsconfig.json --noEmit --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",
    "test:smoke": "node scripts/smoke-tests.js",
    "test:smoke:verbose": "node scripts/smoke-tests.js --verbose",
    "test:load": "node scripts/load-tests.js --concurrent=10 --duration=30",
    "test:load:full": "node scripts/load-tests.js --concurrent=20 --duration=60",
    "test:load:stress": "node scripts/load-tests.js --concurrent=50 --duration=120",
    "test:systemconfig:performance": "vitest run --config vitest.server.config.ts server/__tests__/performance/systemConfig.performance.test.js --testTimeout=30000",
    "test:systemconfig:load": "node scripts/systemconfig-load-test.js --concurrent=25 --duration=60",
    "test:systemconfig:load:read": "node scripts/systemconfig-load-test.js --test-type=read-only --concurrent=50 --duration=60",
    "test:systemconfig:load:write": "node scripts/systemconfig-load-test.js --test-type=write-heavy --concurrent=15 --duration=60",
    "test:systemconfig:load:cache": "node scripts/systemconfig-load-test.js --test-type=cache-test --concurrent=30 --duration=120",
    "test:systemconfig:stress": "node scripts/systemconfig-stress-test.js",
    "test:verify": "node scripts/run-verification-tests.js",
    "test:verify:quick": "node scripts/run-verification-tests.js --quick",
    "test:verify:verbose": "node scripts/run-verification-tests.js --verbose",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "start-server-and-test 'npm run dev' http://localhost:3000 'npm run cypress:run'",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate deploy",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:migrate:reset": "npx prisma migrate reset --force",
    "db:push": "npx prisma db push && npm run db:seed",
    "db:seed": "npx prisma db seed",
    "db:seed:demo": "node prisma/seeds/seed.cjs",
    "db:check-wards": "node scripts/check-wards.js",
    "db:studio": "npx prisma studio --port 5555",
    "db:validate": "npx prisma validate",
    "db:format": "npx prisma format",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:setup:dev": "npm run db:generate && npm run db:push && npm run db:seed",
    "db:reset": "npm run db:migrate:reset && npm run db:setup",
    "db:test-migration": "node scripts/test-migration-procedures.js",
    "db:deploy-production": "node scripts/deploy-migrations-production.js",
    "postinstall": "npm run db:generate",
    "validate:db": "node scripts/validate-db-env.js",
    "validate:build": "node scripts/validate-build.js",
    "validate:env": "node scripts/validate-environment-files.js",
    "validate:docs": "node scripts/validate-deployment-docs.cjs",
    "validate:docs:links": "node scripts/validate-documentation-links.cjs",
    "validate:docs:config": "node scripts/validate-config-paths.cjs",
    "validate:docs:navigation": "node scripts/validate-navigation-consistency.cjs",
    "validate:deployment": "node scripts/run-deployment-validation.cjs",
    "validate:deployment:docs-only": "node scripts/run-deployment-validation.cjs --docs-only",
    "validate:deployment:commands-only": "node scripts/run-deployment-validation.cjs --commands-only",
    "test:deployment-commands": "node scripts/test-deployment-commands.cjs",
    "test:deployment-commands:full": "TEST_MODE=full node scripts/test-deployment-commands.cjs",
    "test:deployment-commands:simulation": "TEST_MODE=simulation node scripts/test-deployment-commands.cjs",
    "validate:deployment:ci": "node scripts/ci-validate-deployment-docs.cjs",
    "cleanup:env": "node scripts/cleanup-environment-files.js",
    "configure:env": "node scripts/configure-environment.js",
    "configure:env:dev": "node scripts/configure-environment.js --env=development",
    "configure:env:prod": "node scripts/configure-environment.js --env=production",
    "configure:env:lan": "node scripts/configure-environment.js --env=lan",
    "health": "curl -f http://localhost:4005/api/health || exit 1",
    "health:lan": "curl -f http://0.0.0.0:4005/api/health || exit 1",
    "logs:app": "tail -f logs/app-$(date +%Y-%m-%d).log",
    "logs:error": "tail -f logs/error-$(date +%Y-%m-%d).log",
    "logs:combined": "tail -f logs/combined-$(date +%Y-%m-%d).log",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "clean": "rimraf dist node_modules/.cache .next .vite",
    "clean:logs": "rimraf logs/*.log",
    "clean:uploads": "rimraf uploads/complaints/* uploads/complaint-photos/*",
    "env:check": "node -e \"console.log('NODE_ENV:', process.env.NODE_ENV); console.log('HOST:', process.env.HOST); console.log('PORT:', process.env.PORT);\"",
    "validate:runtime-config": "echo \"Runtime configuration validation - build supports dynamic config loading\"",
    "build:validate": "npm run build && npm run validate:runtime-config",
    "build:production": "npm run db:setup && npm run build:only && npm run validate:runtime-config"
  },
